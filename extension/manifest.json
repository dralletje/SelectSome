{
  "name": "SelectAll - ctrl+A like you've never experienced before",
  "short_name": "SelectAll",
  "description": "Changes ctrl+A to be actually useful",
  "developer": {
    "name": "Michiel Dral",
    "url": "https://dral.eu/"
  },
  "version": "1",
  "manifest_version": 2,
  "permissions": ["tabs", "<all_urls>"],
  "applications": {
    "gecko": {
      "id": "{3ff7c9aa-7b4d-4b91-b76d-7db9e13f19f9}"
    }
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["<all_urls>"],
      "js": ["Content.js"],
      "all_frames": true
    }
  ],
  "icons": {
    "16": "Icons/Icon_16.png",
    "32": "Icons/Icon_32.png",
    "64": "Icons/Icon_64.png",
    "128": "Icons/Icon_128.png"
  }
}
